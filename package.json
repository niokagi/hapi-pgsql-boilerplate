{
  "name": "hapijs-pgsql-boilerplate",
  "version": "1.0.0",
  "description": "starter project for a Hapi.js backend with PostgreSQL.",
  "main": "src/server.js",
  "type": "module",
  "bin": {
    "hapi-pgsql-boilerplate": "./bin/index.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "dotenv node-pg-migrate"
  },
  "keywords": [
    "hapijs",
    "postgres",
    "backend",
    "boilerplate"
  ],
  "author": "niokagi",
  "license": "ISC",
  "node-pg-migrate": {
    "dir": "src/db/migrations",
    "migrationsTable": "pgmigrations"
  },
  "dependencies": {
    "@hapi/hapi": "^21.4.3",
    "@hapi/jwt": "^3.2.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "joi": "^17.13.3",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10"
  }
}
